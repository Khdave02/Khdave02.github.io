<% include ./partials/header %>
<link rel="styleshseet" href="/views/edit.css"
<div class="">
	<div class="">Edit It<br><h4 id="edit_header"><%= product.title %></h4></div>
	<form class="ui form" action="/products/<%= product._id %>?_method=PUT"  method="POST">
		<div class="field">
			<label>Title</lable>
			<input type="text" name="product[title]" value="<%= product.title %>" required="">
		</div>
		<div class="field">
			<label>Image</lable>
			<input type="text" name="product[image]" value="<%= product.image %>" required="">
		</div>
		<div class="field">
			<label>product Content</lable>
			<textarea name="product[body]" required=""><%- product.body %></textarea>
		</div>
		<div class="ui buttons">
  			<button class="ui button"><a href="/products/<%= product.id %>">Cancel</a></button>
  			<div class="or"></div>
  			<button class="ui positive button" type="submit">Update</button>
		</div>
	</form>
</div>

<% include ./partials/footer %>

